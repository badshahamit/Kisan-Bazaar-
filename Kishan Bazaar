  <script>
    // theme buttons
    const body = document.body;
    document.getElementById('themeGreen').addEventListener('click', ()=>{ body.classList.remove('theme-orange','theme-black'); });
    document.getElementById('themeOrange').addEventListener('click', ()=>{ body.classList.add('theme-orange'); body.classList.remove('theme-black'); });
    document.getElementById('themeBlack').addEventListener('click', ()=>{ body.classList.add('theme-black'); body.classList.remove('theme-orange'); });

    // helper scroll
    function scrollToId(id){ document.getElementById(id)?.scrollIntoView({behavior:'smooth',block:'start'}); }
    function scrollTo(loc){ if(loc==='top') window.scrollTo({top:0,behavior:'smooth'}); }

    // Ask form (Q&A) logic - store in localStorage
    const askForm = document.getElementById('askForm');
    const askPreview = document.getElementById('askPreview');
    const askImage = document.getElementById('askImage');
    const askResult = document.getElementById('askResult');
    const qaList = document.getElementById('qaList');

    if(askImage){
      askImage.addEventListener('change', ()=>{
        const f = askImage.files[0];
        if(!f) { askPreview.style.display='none'; return; }
        const url = URL.createObjectURL(f);
        askPreview.src = url; askPreview.style.display='block';
      });
    }

    function renderQA(){
      const arr = JSON.parse(localStorage.getItem('qa')||'[]');
      if(arr.length===0){ qaList.innerHTML = '<div class="small muted">‡§ï‡•ã‡§à ‡§∏‡§µ‡§æ‡§≤ ‡§Ö‡§≠‡•Ä ‡§®‡§π‡•Ä‡§Ç‡•§ ‡§Ü‡§™ ‡§™‡§π‡§≤‡§æ ‡§∏‡§µ‡§æ‡§≤ ‡§≠‡•á‡§ú‡•á‡§Ç‡•§</div>'; return; }
      qaList.innerHTML = arr.map(item=>{
        const imgHtml = item.img?`<div style="margin-top:8px"><img src="${item.img}" style="max-width:140px;border-radius:8px"/></div>`:'';
        return `<div class="qa-item"><div style="font-weight:700">${escapeHtml(item.name)} ‚Ä¢ ${escapeHtml(item.phone)}</div><div class="small muted" style="margin-top:6px">${escapeHtml(item.text)}</div>${imgHtml}<div style="margin-top:8px" class="small muted">‡§™‡•ç‡§∞‡§æ‡§™‡•ç‡§§: ${escapeHtml(item.time)}</div></div>`;
      }).join('');
    }

    function escapeHtml(s){ return String(s).replace(/[&<>"'\/]/g, function (c) { return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',\"'\":'&#39;','/':'&#x2F;'}[c]; }); }

    askForm.addEventListener('submit', e=>{
      e.preventDefault();
      const name = document.getElementById('askName').value.trim();
      const phone = document.getElementById('askPhone').value.trim();
      const text = document.getElementById('askText').value.trim();
      const time = new Date().toLocaleString();
      // image: if present, convert to dataURL
      if(askImage && askImage.files[0]){
        const reader = new FileReader();
        reader.onload = function(ev){
          saveQA({name,phone,text,time,img:ev.target.result});
        }
        reader.readAsDataURL(askImage.files[0]);
      } else {
        saveQA({name,phone,text,time,img:null});
      }
    });

    function saveQA(obj){
      const arr = JSON.parse(localStorage.getItem('qa')||'[]');
      arr.unshift(obj);
      localStorage.setItem('qa', JSON.stringify(arr));
      askResult.innerHTML = '<div class="success">‡§ß‡§®‡•ç‡§Ø‡§µ‡§æ‡§¶! ‡§Ü‡§™‡§ï‡§æ ‡§∏‡§µ‡§æ‡§≤ ‡§Æ‡§ø‡§≤ ‡§ó‡§Ø‡§æ‡•§ ‡§π‡§Æ ‡§ú‡§≤‡•ç‡§¶ ‡§ú‡§µ‡§æ‡§¨ ‡§¶‡•á‡§Ç‡§ó‡•á‡•§</div>';
      askForm.reset(); if(askPreview) askPreview.style.display='none';
      renderQA();
      // scroll to QA list
      setTimeout(()=>{ scrollToId('qa'); }, 200);
    }

    // Sell form logic (store in localStorage demo)
    const sellForm = document.getElementById('sellForm');
    const sellResult = document.getElementById('sellResult');
    const sellList = document.getElementById('sellList');

    function refreshSellList(){
      const arr = JSON.parse(localStorage.getItem('sells')||'[]');
      if(arr.length===0){ sellList.innerHTML = '<div class="small muted">Koi pending request nahi (demo)</div>'; return; }
      sellList.innerHTML = arr.map(it=>{
        return `<div style="padding:8px;border-radius:8px;border:1px solid #f0f0f0;margin-bottom:8px">
          <div style="font-weight:700">${escapeHtml(it.crop)} ‚Äî ${escapeHtml(it.qty)}</div>
          <div class="small muted">${escapeHtml(it.name)} ‚Ä¢ ${escapeHtml(it.location)}</div>
          <div style="margin-top:8px" class="row">
            <a class="btn" href="tel:${escapeHtml(it.phone)}">Call</a>
            <a class="btn ghost" href="https://wa.me/${escapeHtml(it.phone.replace(/\\D/g,''))}?text=Main%20aapki%20fasal%20le%20na%20chahta%20hun%20(${encodeURIComponent(it.crop)}%20${encodeURIComponent(it.qty)})" target="_blank">WhatsApp</a>
          </div>
        </div>`;
      }).join('');
    }

    if(sellForm){
      sellForm.addEventListener('submit', e=>{
        e.preventDefault();
        const data = {
          name: document.getElementById('sellName').value.trim(),
          location: document.getElementById('sellLocation').value.trim(),
          crop: document.getElementById('sellCrop').value.trim(),
          qty: document.getElementById('sellQty').value.trim(),
          phone: document.getElementById('sellPhone').value.trim(),
          time: new Date().toLocaleString()
        };
        const arr = JSON.parse(localStorage.getItem('sells')||'[]'); arr.unshift(data); localStorage.setItem('sells', JSON.stringify(arr));
        sellResult.innerHTML = '<div class="success">Form mil gaya. Hum jald contact karenge (demo).</div>';
        sellForm.reset(); refreshSellList();
      });
    }

    // search button (simple filter demo)
    document.getElementById('searchBtn').addEventListener('click', ()=>{
      const q = document.getElementById('searchBox').value.trim().toLowerCase();
      if(!q) { alert('‡§ñ‡•ã‡§ú ‡§∂‡§¨‡•ç‡§¶ ‡§°‡§æ‡§≤‡•á‡§Ç (‡§â‡§¶‡§æ: ‡§¨‡•Ä‡§ú, ‡§ü‡•ç‡§∞‡•à‡§ï‡•ç‡§ü‡§∞)'); return; }
      alert('Demo search: "'+q+'". (Full search requires backend/indexing)');
    });

    // init
    renderQA();
    refreshSellList();

    // small UX: enable ENTER to submit search
    document.getElementById('searchBox').addEventListener('keypress', function(e){ if(e.key==='Enter'){ e.preventDefault(); document.getElementById('searchBtn').click(); }});
  </script>
</body>
</html>
